<h1>Employee Management</h1>

<!-- Form to Create/Edit Employee -->
<div>
    <h2 id="formTitle">Add Employee</h2>
    
    <form id="employeeTable">
        <div>
            <label for="Name">Name:</label>
            <input type="text" id="Name" placeholder="Employee Name" />
        </div>
        
        <div>
            <label for="PhoneNumber">Phone Number:</label>
            <input type="text" id="PhoneNumber" placeholder="Employee Phone Number" />
        </div>
        
        <div>
            <label for="DepartmentId">Department:</label>
            <input type="number" id="DepartmentId" placeholder="Department ID" />
        </div>
        
        <button type="button" onclick="createEmployee()">Add Employee</button>
        <!-- Hidden button for updating, you can show it when editing -->
        <button type="button" id="updateButton" onclick="editEmployee()" style="display:none;">Update Employee</button>
    </form>

</div>
 
<!-- Table to Display Employees -->
<button type="button" id="" onclick="fetchEmployees()" style="display:none;"> Employee</button>
<h2>Employees List</h2>
<table id="employeeTable" border="1">
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone Number</th>
            <th>Department ID</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
      
    </tbody>
</table>

